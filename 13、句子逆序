//}

int main(){
    
    //vector <string> s;
    string input;
    vector<string>arr;
    while(cin>>input){
        arr.push_back(input);
    }    
    //while(cin>>s){
        //for (vector<string>::iterator it = arr.end(); it != arr.begin(); it--)
			//{
				//cout<<*it<<' ';
				
			//}
    for (int i = arr.size()-1; i>=0; i--)
			{
				
        if(0==i){
            cout<<arr[i];
        }
        else
			cout<<arr[i]<<' ';	
			}


        
        
        
        
        
    //}
    
    return 0;
}
